<form class="user-role-form seller-add-hotel" action="" method="post" id="seller-add-hotel" name="seller-add-hotel">
  {# =================================================================
   #
   # Hotel Information
   #
   # ===================================================================#}
  <div class="hotel-information">
    <h2>Hotel Information</h2>

    <div class="form-item form-group">
      <input type="text" name="product_name" placeholder="Hotel Name" class="form-control">
    </div>

    <div class="form-item form-group">
      <div class="wrapper-more-media">
        <label>Hotel Images</label>
        {#<button class="upload_media_button" type="button" value="Upload Image">Upload Media</button>#}
        {{ fn('do_shortcode', '[frontend-button data_name="hotel_images"]') }}
      </div>
    </div>

    <div class="form-item form-group">
      <input type="text" name="address" placeholder="Address" class="form-control">
    </div>

    <div class="form-item form-group">
      <input type="text" name="address_coordinates" placeholder="Address Coordinates" class="form-control">
    </div>

    <div class="form-item form-group">
      <input type="text" name="hotel_star" placeholder="Star" class="form-control">
    </div>

    <div class="form-item form-group">
      <input type="tel" name="hotline" placeholder="Phone" class="form-control">
    </div>

    <div class="form-item form-group">
      <input type="text" name="hotel_website" placeholder="Website" class="form-control">
    </div>

    <div class="form-item form-group">
      <input type="text" name="hotel_reservation_name" placeholder="Reservation Name" class="form-control">
    </div>

    <div class="form-item form-group">
      <input type="email" name="email" placeholder="Email Booking" class="form-control">
    </div>

    <div class="form-item form-group">
      <textarea name="description" placeholder="Overview" class="form-control" rows="3"></textarea>
    </div>

    <div class="form-item form-group">
      <textarea name="cancellation_policy" placeholder="Cancellation Policy" class="form-control" rows="3"></textarea>
    </div>

    <div class="form-item form-group">
      <textarea name="hotel_child_policy" placeholder="Child Policy" class="form-control" rows="3"></textarea>
    </div>

    <div class="form-item form-group">
      <textarea name="hotel_promotion" placeholder="Promotion" class="form-control" rows="3"></textarea>
    </div>

    <div class="form-item form-group">
      <textarea name="hotel_remarks" placeholder="Remarks" class="form-control" rows="3"></textarea>
    </div>
    
    <div class="row">
      <div class="col-md-6">
        <div class="form-item form-group">
          <div class="internet-access-service-wrapper wrapper-more-service">
            <input type="text" placeholder="Internet Access" class="input-more-service form-control" data-reference="internet_access_services">
            <a href="#" class="add-more-service">Add more</a>
          </div>
        </div>

        <div class="form-item form-group">
          <div class="relax-services-wrapper wrapper-more-service">
            <input type="text" placeholder="Things To Do; Ways To Relax" class="input-more-service form-control" data-reference="relax_services">
            <a href="#" class="add-more-service">Add more</a>
          </div>
        </div>

        <div class="form-item form-group">
          <div class="dining-drinking-snacking-services-wrapper wrapper-more-service">
            <input type="text" placeholder="Dining, Drinking, And Snacking" class="input-more-service form-control" data-reference="dining_drinking_snacking_services">
            <a href="#" class="add-more-service">Add more</a>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-item form-group">
          <div class="services-conveniences-services-wrapper wrapper-more-service">
            <input type="text" placeholder="Services And Conveniences" class="input-more-service form-control" data-reference="conveniences_services">
            <a href="#" class="add-more-service">Add more</a>
          </div>
        </div>

        <div class="form-item form-group">
          <div class="kids-services-wrapper wrapper-more-service">
            <input type="text" placeholder="For The Kids" class="input-more-service form-control" data-reference="kids_services">
            <a href="#" class="add-more-service">Add more</a>
          </div>
        </div>

        <div class="form-item form-group">
          <div class="getting-around-services-wrapper wrapper-more-service">
            <input type="text" placeholder="Getting Around" class="input-more-service form-control" data-reference="getting_around_services">
            <a href="#" class="add-more-service">Add more</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  {# =================================================================
   #
   # Room Information
   #
   # ===================================================================#}
  <div class="rooms-information">
    <h2>Rooms Information</h2>
    <div class="rooms-clone">
      <div class="form-item form-group">
        <input type="text" name="hotel_room_type" placeholder="Room Type" class="form-control">
      </div>

      <div class="form-item form-group">
        <div class="wrapper-more-media">
          <label>Room Images</label>
          {#<button class="upload_media_button" type="button" value="Upload Image">Upload Media</button>#}
          {{ fn('do_shortcode', '[frontend-button data_name="room_images"]') }}
        </div>
      </div>

      <div class="form-item form-group">
        <input type="text" name="product_code" placeholder="Hotel Code" class="form-control">
      </div>

      <div class="form-item form-group">
        <input type="text" name="quantity_in_stock" placeholder="Number Of Available Room" class="form-control">
      </div>

      <div class="form-item form-check form-check-inline">
        <input type="checkbox" name="hotel_breakfast_included" id="hotel_breakfast_included" class="form-check-input">
        <label for="hotel_breakfast_included" class="form-check-label">Breakfast Included</label>
      </div>

      <div class="form-item form-group">
        <input type="number" name="hotel_capacity_adult" placeholder="Capacity (Adult)" min="1" class="form-control">
      </div>

      <div class="form-item form-group">
        <input type="number" name="hotel_capacity_child" placeholder="Capacity (Child)" min="0" class="form-control">
      </div>

      <div class="form-item form-group">
        <div class="room-facilities-services-wrapper wrapper-more-service">
          <input type="text" placeholder="Room Facilities" class="input-more-service form-control" data-reference="room_facilities_services">
          <a href="#" class="add-more-service">Add more</a>
        </div>
      </div>

      <div class="form-item form-group">
        <input type="number" name="unit_price" placeholder="SGL NETT Price" class="form-control">
      </div>

      <div class="form-item form-group">
        <input type="number" name="custom_exchange_rate" placeholder="Custom Exchange Rate" class="form-control">
      </div>

      <div class="form-item form-group">
        <input type="number" name="benefit" placeholder="Benefit" class="form-control">
      </div>

      <div class="form-item form-group">
        <input type="number" name="extra_bed_nett_price" placeholder="Extra Bed NETT Price" class="form-control">
      </div>

      <div class="form-item form-group">
        <input type="number" name="weekend_surcharge" placeholder="Weekend surcharge" class="form-control">
      </div>

      <div class="form-item form-group">
        <input type="number" name="asian_customer_nett_price" placeholder="Asian Customer Nett Price" class="form-control">
      </div>

      <div class="form-item form-group">
        <input type="number" name="westerner_customer_nett_price" placeholder="Westerner Customer Nett Price" class="form-control">
      </div>
    </div>

    <div class="rooms-resuft"></div>
    <a href="#" class="add-more-rooms">Add Room</a>
  </div>

  {# =================================================================
   #
   # Form hidden Information
   #
   # ===================================================================#}
  <div class="form-hidden hidden">
    <input type="hidden" name="product_category" value="hotel">
    <input type="hidden" name="unit" value="room">
    <input type="hidden" name="internet_access_services">
    <input type="hidden" name="relax_services">
    <input type="hidden" name="dining_drinking_snacking_services">
    <input type="hidden" name="conveniences_services">
    <input type="hidden" name="kids_services">
    <input type="hidden" name="getting_around_services">
    <input type="hidden" name="room_facilities_services">
    <input type="hidden" name="hotel_price_public">
    <input type="hidden" name="in_hotel" data-target="product_name">
  </div>

  {# =================================================================
   #
   # Form Actions
   #
   # ===================================================================#}
  <div class="form-action">
    <button type="sunmit" name="action" value="seller-add-hotel" class="btn btn-default">Send</button>
    <button type="reset" class="btn btn-default">Reset</button>
  </div>
</form>